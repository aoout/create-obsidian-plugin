{
  "name": "@aoout/create-obsidian-plugin",
  "version": "1.9.10",
  "description": "An unofficial tool for easily creating an obsidian plugin, with i18n support, workflows...",
  "keywords": [
    "create",
    "obsidian",
    "plugin",
    "obsidian.md"
  ],
  "bin": {
    "create-obsidian-plugin": "bin/run"
  },
  "author": "Justin Bennett <zephraph@gmail.com>",
  "contributors": [
    "lisandra-dev <mara-li@outlook.fr>",
    "aoout <wuz66280@gmail.com>"
  ],
  "homepage": "https://github.com/aoout/create-obsidian-plugin",
  "license": "MIT",
  "main": "lib/create-obsidian-plugin.js",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aoout/create-obsidian-plugin.git"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prebuild": "shx rm -rf lib",
    "build": "tsc && shx cp -R src/templates lib/templates",
    "prestart": "pnpm run build",
    "start": "node -r path ./bin/run",
    "prebump": "pnpm run build",
    "bump": "commit-and-tag-version",
    "prerelease": "pnpm run bump",
    "release": "pnpm publish",
    "postrelease": "git push --follow-tags origin master"
  },
  "commit-and-tag-version": {
    "t": ""
  },
  "bugs": {
    "url": "https://github.com/aoout/create-obsidian-plugin/issues"
  },
  "devDependencies": {
    "@types/ejs": "3.1.2",
    "@types/node": "20.1.0",
    "@types/prettier": "2.7.2",
    "@types/prompts": "^2.4.4",
    "esbuild": "0.17.18",
    "eslint": "^8.40.0",
    "shx": "^0.3.4",
    "typescript": "^5.0.4"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "dependencies": {
    "@types/dedent": "^0.7.0",
    "@types/eslint": "^8.37.0",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "ansi-colors": "^4.1.1",
    "commit-and-tag-version": "^11.2.1",
    "dedent": "^0.7.0",
    "ejs": "^3.1.6",
    "eslint-plugin-jsonc": "^2.7.0",
    "execa": "5.0.0",
    "i18next": "^22.4.14",
    "obsidian": "^1.2.8",
    "prettier": "^2.2.1",
    "prompts": "^2.4.0",
    "simple-git": "^3.18.0",
    "spdx-license-list": "^6.4.0"
  }
}
